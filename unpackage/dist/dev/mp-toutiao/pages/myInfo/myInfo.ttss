
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	width: 100%;
	height: 86vh;
	background: rgb(248, 248, 248);
}
.view_image_text {
	display: inline-flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	width: 100%;
	height: 20vh;
	margin: 10vh 0 10vh 0;
}
.image_radius {

	height: 50px;
	width: 50px;
	border-radius: 30px;
}
.login-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 30vw;
	height: 30vw;
	border-radius: 15vw 15vw;
	background-color: red;
	color: white;
	font: 6vw bolder;
	box-shadow: 1vw 1vw rgba(123, 123, 123, .4);
}
.login-btns {
	display: inline-flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	width: 20%;
	height: 100%;
	font-size: 3vw;
}

